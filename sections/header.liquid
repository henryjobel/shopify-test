<header class="site-header">
  <div class="page-width site-header__inner">
    <a class="site-header__logo" href="{{ routes.root_url }}">{{ shop.name }}</a>
    <nav>
      <ul>
        {% if section.settings.menu != blank %}
          {% for link in section.settings.menu.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        {% else %}
          <li><a href="{{ routes.root_url }}">Home</a></li>
          <li><a href="{{ routes.all_products_collection_url }}">Shop</a></li>
          <li><a href="{{ routes.search_url }}">Search</a></li>
        {% endif %}
      </ul>
    </nav>
    <div class="site-header__actions">
      <a href="{{ routes.account_url }}">Account</a>
      <a href="{{ routes.cart_url }}">Cart ({{ cart.item_count }})</a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    { "type": "link_list", "id": "menu", "label": "Menu" }
  ]
}
{% endschema %}
