<section class="section-spacing page-width testimonials">
  <div class="section-title">
    <div>
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subtext }}</p>
    </div>
  </div>
  <div class="testimonials__grid">
    {% for block in section.blocks %}
      <article class="testimonial" {{ block.shopify_attributes }}>
        <p>“{{ block.settings.quote }}”</p>
        <strong>{{ block.settings.author }}</strong>
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "What customers say" },
    { "type": "text", "id": "subtext", "label": "Subtext", "default": "Social proof block aligned with modern Shopify landing pages." }
  ],
  "blocks": [
    {
      "type": "quote",
      "name": "Quote",
      "settings": [
        { "type": "textarea", "id": "quote", "label": "Quote", "default": "Excellent quality and fast shipping. Exactly as described." },
        { "type": "text", "id": "author", "label": "Author", "default": "Verified buyer" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Testimonials", "blocks": [{ "type": "quote" },{ "type": "quote" },{ "type": "quote" }] }]
}
{% endschema %}
