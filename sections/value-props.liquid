<section class="section-spacing page-width value-props">
  <div class="section-title">
    <h2>{{ section.settings.heading }}</h2>
  </div>
  <div class="value-props__grid">
    {% for block in section.blocks %}
      <article class="value-props__item" {{ block.shopify_attributes }}>
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.text }}</p>
      </article>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Value props",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why customers love us"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Value item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Premium quality"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Made with durable, responsibly sourced materials."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Value props",
      "blocks": [
        { "type": "item" },
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}
