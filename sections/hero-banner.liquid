<section class="hero">
  <div class="page-width hero__grid">
    <div>
      <div class="hero__eyebrow">{{ section.settings.eyebrow }}</div>
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subtext }}</p>
      <div class="hero__cta">
        {% if section.settings.button_label != blank %}
          <a class="button button--primary" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
        {% endif %}
        {% if section.settings.secondary_button_label != blank %}
          <a class="button button--secondary" href="{{ section.settings.secondary_button_link }}">{{ section.settings.secondary_button_label }}</a>
        {% endif %}
      </div>
    </div>
    <div class="hero__image">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 1200 | image_tag: loading: 'eager', sizes: '(min-width: 1024px) 50vw, 100vw', widths: '480, 720, 960, 1200', alt: section.settings.heading }}
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero banner",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "New collection" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Elevate your everyday with timeless essentials" },
    { "type": "textarea", "id": "subtext", "label": "Subtext", "default": "Build your storefront around a high-converting hero with clear hierarchy, rich imagery, and strong calls to action." },
    { "type": "text", "id": "button_label", "label": "Primary button label", "default": "Shop now" },
    { "type": "url", "id": "button_link", "label": "Primary button link" },
    { "type": "text", "id": "secondary_button_label", "label": "Secondary button label", "default": "View lookbook" },
    { "type": "url", "id": "secondary_button_link", "label": "Secondary button link" },
    { "type": "image_picker", "id": "image", "label": "Hero image" }
  ],
  "presets": [{ "name": "Hero banner" }]
}
{% endschema %}
